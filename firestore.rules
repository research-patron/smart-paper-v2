// ~/Desktop/smart-paper-v2/firestore.rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ユーザードキュメント
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 論文ドキュメント
    match /papers/{paperId} {
      allow read: if request.auth != null && (
        resource.data.user_id == request.auth.uid || 
        exists(/databases/$(database)/documents/papers/$(paperId)/shared_with_admins/$(request.auth.uid))
      );
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.user_id == request.auth.uid;
      
      // 章の翻訳サブコレクション
      match /translated_chapters/{chapterId} {
        allow read: if request.auth != null && get(/databases/$(database)/documents/papers/$(paperId)).data.user_id == request.auth.uid;
        allow write: if request.auth != null && get(/databases/$(database)/documents/papers/$(paperId)).data.user_id == request.auth.uid;
      }
    }
    
    // 問い合わせ/問題報告ドキュメント - ここを修正
    match /inquiries/{inquiryId} {
      // 読み取り権限 - 自分の問い合わせと管理者のみ
      allow read: if request.auth != null && (
        resource.data.user_id == request.auth.uid || 
        request.auth.token.email == 's.kosei0626@gmail.com'
      );
      // 作成権限 - 未認証ユーザーを含め、誰でも作成可能
      allow create: if true;
      // 更新・削除権限 - 自分の問い合わせと管理者のみ
      allow update, delete: if request.auth != null && (
        resource.data.user_id == request.auth.uid || 
        request.auth.token.email == 's.kosei0626@gmail.com'
      );
    }
    
    // パフォーマンス計測データ
    match /process_time/{docId} {
      allow read: if request.auth != null && request.auth.token.email == 's.kosei0626@gmail.com';
      allow write: if true; // Cloud Functions からの書き込みを許可
    }
  }
}
